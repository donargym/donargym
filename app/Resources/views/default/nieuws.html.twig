{% extends 'default/base.html.twig' %}

{% block body %}
    {% if app.user and is_granted('ROLE_ADMIN') %}
        <a href="{{ path('addNieuwsPage') }}">Nieuw nieuwsbericht plaatsen:<img src="{{ asset('images/add.png') }}" width="18px" /></a>
    {% endif %}
{% for item in nieuwsItems %}
    <div id="post-title"><em>{{ item.datumtijd }}</em></div>
    <div class="line" style="width:597px;margin-left:auto;margin-right:auto;margin-top:0px;margin-bottom:10px;"></div>
    <div id="post-content">
        <h1>
            {{ item.titel }}
            {% if app.user and is_granted('ROLE_ADMIN') %}
                <a href="{{ path('editNieuwsberichtPage', { 'id': item.id }) }}"><img src="{{ asset('images/edit.png') }}" width="18px" /></a>
                <a href="{{ path('removeNieuwsberichtPage', { 'id': item.id }) }}"><img src="{{ asset('images/remove.png') }}" width="18px" /></a>
            {% endif %}
        </h1>
    <p>{{ item.bericht|raw }}</p></div>
{% endfor %}
{% endblock %}
