<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta charset="UTF-8" />
        <title>Welkom bij Gymnastiek Vereniging Donar Den Haag</title>
        {% block stylesheets %}
            <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
        {% endblock %}
        <link rel="shortcut icon" type="image/png" href="{{ asset('images/donarlogo.png') }}" />
    </head>
    <body>
    <div id="header">
        <a href="/">
            {% block header %}
                <img width="980" src="{{ asset('images/headers/'~ header ~'.jpg') }}" />
            {% endblock %}
        </a>
    </div>
    <div id="navigator">
        {% block nieuws %}
            <a href="{{ path('getNieuwsPage') }}">Nieuws</a>
        {% endblock %}
        {% block donar %}
            <a href="{{ path('getDonarPage') }}">Donar</a>
        {% endblock %}
        {% block lessen %}
            <a href="{{ path('getLessenPage') }}">Lessen</a>
        {% endblock %}
        {% block wedstrijdturnen %}
            <a href="{{ path('getWedstrijdturnenPage') }}">Wedstrijdturnen</a>
        {% endblock %}
        {% block lidmaatschap %}
            <a href="{{ path('getLidmaatschapPage') }}">Lidmaatschap</a>
        {% endblock %}
        {% block fotofilm %}
            <a href="{{ path('getFotofilmPage') }}">Foto/Film</a>
        {% endblock %}
        {% block vrijwilligers %}
            {# <a href="{{ path('getVrijwilligersPage') }}">Vrijwilligers</a> #}
        {% endblock %}
        {% block contact %}
            <a href="{{ path('getContactPage') }}">Contact</a>
        {% endblock %}
        {% block inloggen %}
            <a href="{{ path('getInloggenPage') }}">Inloggen</a>
        {% endblock %}
    </div>
    <div class="line2" style="width:980px;margin-left:auto;margin-right:auto;margin-top:20px;margin-bottom:20px;"></div>
    <div id="article">
        <div id="menu">
            {% block menu %}{% endblock %}
        </div>
        <div id="page">
            {% block body %}

            {% endblock %}
        </div>
        <div id="agenda">
            <div id="text">
                <h2>Agenda
                    {% if app.user and is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('addAgendaPage') }}"><img src="{{ asset('images/add.png') }}" width="18px" /></a>
                    {% endif %}
                </h2>
                (data onder voorbehoud)
                <div class="line" style="width:175px;margin-left:auto;margin-right:auto;margin-top:10px;margin-bottom:10px;"></div>
                {% for item in calendarItems %}
                    <b><a href="{{ path('getAgendaPage', { 'id': item.id }) }}">{{ item.datum }}</a></b>
                    {% if app.user and is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('editAgendaPage', { 'id': item.id }) }}"><img src="{{ asset('images/edit.png') }}" width="18px" /></a>
                        <a href="{{ path('removeAgendaPage', { 'id': item.id }) }}"><img src="{{ asset('images/remove.png') }}" width="18px" /></a>
                    {% endif %}
                    <br />
                    <a href="{{ path('getAgendaPage', { 'id': item.id }) }}">
                        <span style="font-weight:normal;">{{ item.activiteit }}</span>
                    </a>
                    <div class="line" style="width:175px;margin-left:auto;margin-right:auto;margin-top:10px;margin-bottom:10px;"></div>
            {% endfor %}
            </div>
        </div>
    </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
