                        {% endfor %}
                    {% endfor %}
                </select></td>
        </tr>
        <tr>
            <td>Subdoel 3</td>
            <td><select name="sub3" style="width: 254px;">
                    <option selected></option>
                    {% for toestel in doelenPerToestel %}
                        {% for doel in toestel.doelen %}
                            <option value="{{ doel.id }}">{{ doel.naam }} {{ toestel.naam }}{% if doel.trede is defined %} {{ doel.trede }}{% endif %}</option>
                        {% endfor %}
                    {% endfor %}
                </select></td>
        </tr>
        <tr>
            <td>Subdoel 4</td>
            <td><select name="sub4" style="width: 254px;">
                    <option selected></option>
                    {% for toestel in doelenPerToestel %}
                        {% for doel in toestel.doelen %}
                            <option value="{{ doel.id }}">{{ doel.naam }} {{ toestel.naam }}{% if doel.trede is defined %} {{ doel.trede }}{% endif %}</option>
                        {% endfor %}
                    {% endfor %}
                </select></td>
        </tr>
        <tr>
            <td>Subdoel 5</td>
            <td><select name="sub5" style="width: 254px;">
                    <option selected></option>
                    {% for toestel in doelenPerToestel %}
                        {% for doel in toestel.doelen %}
