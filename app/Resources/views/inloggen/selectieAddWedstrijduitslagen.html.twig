{% extends 'inloggen/selectieShowPersoon.html.twig' %}

{% block inlogNavigation %}
    <div id="inlog_nav">
        <div id="text">
            <a href="{{ path('showPersoon', { 'id': persoonItems.id }) }}">{{ persoonItems.voornaam }} {{ persoonItems.achternaam }}</a>
            > <a href="{{ path('viewWedstrijduitslagen', { 'persoonId': persoonItems.id, 'groepId': groepId }) }}">Wedstrijduitslagen</a>
            > <i>Wedstrijduitslag uploaden</i>
        </div>
    </div>
{% endblock %}

{% block pageHeader %}
    <h1>Wedstrijduitslag uploaden</h1>
{% endblock %}

{% block body %}
    {% if functie == 'Trainer' %}
        <a href="{{ path('viewWedstrijduitslagen', { 'persoonId': persoonItems.id, 'groepId': groepId }) }}">Annuleer</a>
        <p>Let op: het bestand mag maximaal 5 Mb zijn!</p>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <table>
            <tr>
                <td colspan="2">{{ form_errors(form.file) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.file) }}</td>
                <td>{{ form_widget(form.file) }}</td>
            </tr>
            <tr>
                <td colspan="2">{{ form_errors(form.naam) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.naam) }}</td>
                <td>{{ form_widget(form.naam) }}</td>
            </tr>
            <tr>
                <td colspan="2">{{ form_errors(form.datum) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.datum) }}</td>
                <td>{{ form_widget(form.datum) }}</td>
            </tr>

        </table>
        {{ form_widget(form.uploadBestand) }}
        {{ form_end(form) }}
    {% endif %}
{% endblock %}