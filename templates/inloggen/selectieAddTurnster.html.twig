{% extends 'inloggen/selectieShowPersoon.html.twig' %}

{% block inlogNavigation %}
    <div id="inlog_nav">
        <div id="text">
            <a href="{{ path('showPersoon', { 'id': persoonItems.id }) }}">{{ persoonItems.voornaam }} {{ persoonItems.achternaam }}</a>
            > <i>Turnster toevoegen</i>
        </div>
    </div>
{% endblock %}

{% block pageHeader %}
    <h1>Turnster toevoegen</h1>
{% endblock %}

{% block body %}
    <form method="post" action="">
        <table>
            <tr>
                <td>Voornaam</td><td><input type="text" name="voornaam" placeholder="Voornaam" style="width: 200px" required /></td>
            </tr>
            <tr>
                <td>Achternaam</td><td><input type="text" name="achternaam" placeholder="Achternaam" style="width: 200px" required /></td>
            </tr>
            <tr>
                <td>Geboortedatum</td><td><input type="date" name="geboortedatum" style="width: 200px" required /></td>
            </tr>
            <tr>
                <td>Emailadres</td><td><input type="email" name="username" placeholder="Emailadres" style="width: 200px" required /></td>
            </tr>
            <tr>
                <td>Tweede emailadres</td><td><input type="email" name="email2" placeholder="Emailadres" style="width: 200px" /></td>
            </tr>
			<tr>
                <td>Derde emailadres</td><td><input type="email" name="email3" placeholder="Emailadres" style="width: 200px" /></td>
            </tr>
            <tr>
                <td>Straat + huisnr</td><td><input type="text" name="straatnr" placeholder="Straat nr" style="width: 200px" required /></td>
            </tr>
            <tr>
                <td>Postcode</td><td><input type="text" name="postcode" placeholder="0000AA" style="width: 200px" required /></td>
            </tr>
            <tr>
                <td>Plaats</td><td><input type="text" name="plaats" placeholder="Plaats" style="width: 200px" required /></td>
            </tr>
            <tr>
                <td>Telefoonnummer</td><td><input type="text" name="tel1" placeholder="0612345678" style="width: 200px" required /></td>
            </tr>
            <tr>
                <td>Tweede Telefoonnummer</td><td><input type="text" name="tel2" placeholder="0612345678" style="width: 200px" /></td>
            </tr>
            <tr>
                <td>Derde Telefoonnummer</td><td><input type="text" name="tel3" placeholder="0612345678" style="width: 200px" /></td>
            </tr>
            {% for groep in groepen %}
                <tr>
                    <td>Groep</td><td>
                        <b>{{ groep.naam }}</b>
                        <input type="hidden" name="groep_{{ groep.id }}" value="Turnster">
                    </td>
                </tr>
                {% for training in groep.trainingen %}
                    <tr>
                        <td></td><td><label><input type="checkbox" name="trainingen_{{ training.id }}" />{{ training.dag }}: {{ training.tijdVan }} - {{ training.tijdTot }}</label></td>
                    </tr>
                {% endfor %}
            {% endfor %}
        </table>
        <input type="submit" value="Opslaan" />
    </form>

{% endblock %}
