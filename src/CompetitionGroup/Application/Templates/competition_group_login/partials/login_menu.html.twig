<div id="inlogmenu">
    <ul>
        <li>
            <a href="{{ path('competitionGroupLoginIndex') }}">
                Algemene gegevens
            </a>
        </li>
        {% for competitionGroupMember in competitionGroupMembers.findForUser(app.user.userId) %}
            <li>
                <a href="{{ path('competitionGroupMember', { 'competitionGroupMemberId': competitionGroupMember.id }) }}">
                    {{ competitionGroupMember.firstName }} {{ competitionGroupMember.lastName }}
                </a>
            </li>
        {% endfor %}
        {% if is_granted('ROLE_PREVIOUS_ADMIN') or is_granted('ROLE_PREVIOUS_COMPETITION_GROUP') %}
            <li>
                <a href="{{ path('redirectToCorrectLoginPage', {'_switch_user': '_exit'}) }}">
                    Uitloggen
                </a>
            </li>
        {% else %}
            <li><a href="{{ path('logout') }}">Uitloggen</a></li>
        {% endif %}
    </ul>
</div>
