{% extends '@Shared/base.html.twig' %}

{% block inlogNavigation %}
    <div id="inlog_nav">
        <div id="text">
            <a href="{{ path('showCompetitionGroup', { 'groupId': group.id }) }}">{{ group.name }}</a>
            > <i>{{ gymnast.firstName }}</i>
        </div>
    </div>
{% endblock %}

{% block body %}
    <h1>{{ group.name }}</h1>
    <table>
        <tr style="vertical-align:top;">
            <td>
                <img src="{{ asset('uploads/selectiefotos/'~gymnast.pictureFileName) }}" width="200"
                     alt="{{ gymnast.firstName }}"/>
            </td>
            <td>
                <br/><br/>
                <h2>{{ gymnast.firstName }}</h2>
                <p><b>Categorie:</b> {{ gymnast.category }}</p>
            </td>
        </tr>
    </table>
    {% if aboutCompetitionGroupMember %}
        <p>
            <b>Leukste toestel:</b><br/>
            {{ aboutCompetitionGroupMember.mostFunApparatus }}
        </p>

        <p>
            <b>Omdat:</b><br/>
            {{ aboutCompetitionGroupMember.explanationAboutMostFunApparatus }}
        </p>

        <p>
            <b>Leukste wedstijd tot nu toe:</b><br/>
            {{ aboutCompetitionGroupMember.mostFunCompetition }}
        </p>

        <p>
            <b>Leukste/moeilijkste element:</b><br/>
            {{ aboutCompetitionGroupMember.mostFunOrHardestSkill }}
        </p>

        <p>
            <b>Ik wil dit jaar nog leren:</b><br/>
            {{ aboutCompetitionGroupMember.wouldLikeToLearn }}
        </p>

        <p>
            <b>Beste turnster/voorbeeld:</b><br/>
            {{ aboutCompetitionGroupMember.exampleGymnast }}
        </p>

        <p>
            <b>Dit wil ik nog kwijt:</b><br/>
            {{ aboutCompetitionGroupMember.anythingElse }}
        </p>
    {% endif %}
{% endblock %}
