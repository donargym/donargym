{% extends '@Shared/base.html.twig' %}

{% block body %}
    <h1>Formulieren</h1>
    {% if app.user and is_granted('ROLE_ADMIN') %}
        <a href="{{ path('addFormulierenPage') }}">
            Formulier toevoegen:
            <img src="{{ asset('images/add.png') }}" width="18px" alt="Formulier toevoegen"/>
        </a>
    {% endif %}
    <ul>
        {% for form in subscriptionPaperForms %}
            <li>
                <a href="/uploads/formulieren/{{ form.fileName }}" target="blank">{{ form.name }}</a>
                {% if app.user and is_granted('ROLE_ADMIN') %}
                    <input type="image" class="remove-paper-form" src="{{ asset('images/remove.png') }}"
                           data-id="{{ form.id }}" data-label="{{ form.name }}"
                           alt="{% trans %}remove_paper_form_modal.title{% endtrans %}"/>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}

{% block modals %}
    {% include '@PublicInformation/subscription/remove_paper_form_modal.html.twig' %}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/remove-paper-form.js') }}"></script>
{% endblock %}
