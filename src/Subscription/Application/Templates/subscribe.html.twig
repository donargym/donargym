            <td>{{ form_errors(form.subscribedUntil) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.otherClub) }}</td>
            <td>{{ form_widget(form.otherClub) }}</td>
            <td>{{ form_errors(form.otherClub) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.whatOtherClub) }}</td>
            <td>{{ form_widget(form.whatOtherClub) }}</td>
            <td>{{ form_errors(form.whatOtherClub) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.paidBondContribution) }}</td>
            <td>{{ form_widget(form.paidBondContribution) }}</td>
            <td>{{ form_errors(form.paidBondContribution) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.how) }}</td>
            <td>{{ form_widget(form.how) }}</td>
            <td>{{ form_errors(form.how) }}</td>
        </tr>
    </table>

    <p>
        {{ form_errors(form.voluntaryWork) }}<br />
        {{ form_label(form.voluntaryWork) }}
    </p>
    <p>
        {{ form_widget(form.voluntaryWork) }}
    </p>

    <p>{{ form_widget(form.accept) }}{{ form_label(form.accept) }}</p>
    <p>{{ form_widget(form.acceptPrivacyPolicy) }}{{ form_label(form.acceptPrivacyPolicy) }}</p>
    <p>{{ form_label(form.acceptNamePublished) }}{{ form_widget(form.acceptNamePublished) }}</p>
    <p>{{ form_label(form.acceptPicturesPublished) }}{{ form_widget(form.acceptPicturesPublished) }}</p>
    {{ form_end(form) }}
{% endblock %}
